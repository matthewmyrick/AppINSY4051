<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModel="clr-namespace:AppINSY4051.ViewModel"
             x:Class="AppINSY4051.View.HomeView">
    
	<ContentPage.BindingContext>
		<ViewModel:HomeViewModel/>
	</ContentPage.BindingContext>

    <StackLayout>
        <Image Source="https://upload.wikimedia.org/wikipedia/en/thumb/7/73/GoPuff_logo.svg/1200px-GoPuff_logo.svg.png" HeightRequest="100"/>
        <Button Text="Find Items" Command="{Binding GoToFindItemsCommand}"/>
        <Button Text="Checkout" Command="{Binding GoToCheckoutCommand}"/>
    </StackLayout>
    
</ContentPage>